@{
    ViewData["Title"] = "Lista de Productos";
    @model List<CapaDatos.Models.Producto>
    <h2>@ViewData["Title"]</h2>
    <p>
        <a asp-action="Create" > Crear nuevo producto</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Categoría</th>
                <th>Acción</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var producto in Model)
            {
                <tr>
                    <td>@producto.Id</td>
                    <td>@producto.Nombre</td>
                    <td>@producto.Descripcion</td>
                    <td>@producto.Categoria</td>
                    <td>
                        <a asp-action="Ver" asp-router-id="@producto.Id" class="btn btn-succes">Ver foto</a>
                        <a asp-action="Edit" asp-router-id="@producto.Id" class="btn btn-warning">Editar</a>
                        <a asp-action="Delete" asp-router-id="@producto.Id" class="btn btn-danger">Eliminar</a>
                    </td>
                </tr>
            }   
        </tbody>
    </table>
}
